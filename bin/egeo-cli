#!/usr/bin/env node

var program = require('commander');
var docGenerator = require('../src/docGenerator');
var componentFile = undefined;

program
   .version('0.1.0')
   .usage('<example path>')
   // .option('-d, --document [component]', 'Document a component', '')
   .action(function (path) {
      componentFile = path
   })
   .parse(process.argv);

if (typeof componentFile === 'undefined') {
   console.error('no component file path given!');
   process.exit(1);
}

docGenerator(componentFile);
